<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= portfolio.id %>">
    <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span><%= portfolio.title %></span>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to 'View', portfolio_show_path(portfolio) %>
          </button>
          <button type="button" class="btn btn-sm btn-outline-secondary">
            <%= link_to 'Edit', edit_portfolio_path(portfolio) %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
